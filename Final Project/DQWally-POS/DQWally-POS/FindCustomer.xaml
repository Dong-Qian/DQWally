<Window x:Class="DQWally_POS.FindCustomer"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:DQWally_POS"
        mc:Ignorable="d"
        Title="FindCustomer" Height="300" Width="300">
    <Grid x:Name="Find">
        <Label x:Name="LName_lb" Content="Last Name:" HorizontalAlignment="Left" Margin="16,41,0,0" VerticalAlignment="Top"/>
        <Label x:Name="FName_lb" Content="Phone Number:" HorizontalAlignment="Left" Margin="16,113,0,0" VerticalAlignment="Top"/>
        <TextBox x:Name="LName_tb" HorizontalAlignment="Left" Height="23" Margin="133,44,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="120"/>
        <TextBox x:Name="PNumber_tb" HorizontalAlignment="Left" Height="23" Margin="133,116,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="120"/>
        <Button x:Name="button" Content="LookUp" HorizontalAlignment="Left" Margin="107,208,0,0" VerticalAlignment="Top" Width="75" Click="button_Click"/>
        <Label x:Name="Error_lb" Content="" HorizontalAlignment="Left" Margin="61,169,0,0" VerticalAlignment="Top" Width="176" FontStyle="Italic" Foreground="#FFEE0E0E"/>

    </Grid>
</Window>
